# configuration for run_unittests script to run (selected) unittests with coverage

# location of testscripts
# this is assuming all testscripts are in the same directory; otherwise leave this empty 
# and use full paths in the entries in the next section
[testdir]
unittests

# mapping of parameter values to testscripts
[testscripts]
check: test_check_repo.py
db:    test_db.py
jsonp: test_jsonp.py
lang:  test_lang.py
lists: test_list2scite.py
listv: test_list2vi.py
morefd: test_morefromdos.py
renf:  test_rename_files.py
repo:  test_repo.py
scriptlib:   test_scriptlib.py
session:  test_session.py
sett:  test_settings.py
sort:  test_sort_file.py
tags:  test_tags.py
tasks: test_tasks.py
www:   test_www.py
xmlp:  test_xmlp.py

# mapping of (the same) parameter values to scripts to test
# this is assuming al scripts to tests are in the directory this file is located in
# otherwise use full paths in the entries in this section
[testees]
check: check_repo.py
db:    db.py
jsonp: jsonp.py
lang:  lang.py
lists: list2scite.py
listv: list2vi.py
morefd: morefromdos.py
renf:  rename_files.py
repo:  repo.py
scriptlib:   scriptlib.py
session:  session.py
sett:  settings.py
sort:  sort_file.py
tags:  tags.py
tasks: tasks.py
www:   www.py
xmlp:  xmlp.py
