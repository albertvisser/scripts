#! /bin/bash

echo push-local report on `date` > /tmp/hg_pushusb.log
echo '' > /tmp/hg_pushusb.log
for name in apropos cobtools doctree filefindr htmledit jvsdoe leesjcl notetree probreg rst2html-web tcmdrkeys xmledit
do
    cd ~/$name
    hg status --quiet > /tmp/hg_st_$name
    if [ -s /tmp/hg_st_$name ]
    then
        echo $name not pushed: uncommitted changes >> /tmp/hg_pushusb.log
    else
        if hg outgoing; then
            hg push --remotecmd update
            echo $name: pushing to central >> /tmp/hg_pushusb.log
        fi
    fi
done
